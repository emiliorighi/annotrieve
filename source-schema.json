{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/sources.schema.json",
    "title": "Annotation Sources Configuration",
    "type": "object",
    "additionalProperties": {
      "type": "object",
      "required": ["description", "chr_alias_key", "tsv_url", "import_once"],
      "properties": {
        "description": {
          "type": "string"
        },
        "chr_alias_key": {
          "type": "string",
          "enum": ["genbank_accession", "refseq_accession", "chr_name", "ucsc_style_name", "sequence_name"],
          "description": "Key to map chromosome alias to https://github.com/ncbi/datasets/blob/master/datasets.openapi.yaml#L12887"
        },
        "tsv_url": {
          "type": "string",
          "format": "uri",
          "description": "URL of the TSV file (required for http/ftp)"
        },
        "import_once": {
          "type": "boolean",
          "default": false,
          "description": "Whether to import the source once or periodically"
        }
      }
    }
  }
  